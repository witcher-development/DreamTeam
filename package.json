{
  "name": "test-web",
  "private": true,
  "workspaces": {
    "packages": [
      "backend/*",
      "frontend/*",
      "frontend/*/*"
    ]
  },
  "scripts": {
    "gateway:dev": "yarn workspace @backend/gateway dev",
    "frontend": "yarn workspace @frontend/dashboard dev",
    "typecheck": "lerna run typecheck",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame backend/**/*.ts"
  },
  "devDependencies": {
    "husky": "^2.4.1",
    "lerna": "3.15.0",
    "tslint": "^5.17.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn typecheck"
    }
  },
  "dependencies": {
    "typescript": "^3.6.3"
  }
}
